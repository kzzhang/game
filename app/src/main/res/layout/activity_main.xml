<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff232323">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal1"
            android:background="#ffffffff"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rOp1"
            android:background="#ffffffff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal2"
            android:background="#ffffffff"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rOp2"
            android:background="#ffffffff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal3"
            android:background="#ffffffff"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rOp3"
            android:background="#ffffffff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal4"
            android:background="#ffffffff"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

    </GridLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum1"
        android:background="@color/brightOrange"
        android:tag="0"
        android:onClick="buttonClick"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_large_material" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum3"
        android:background="@color/brightOrange"
        android:tag="2"
        android:onClick="buttonClick"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_large_material" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum4"
        android:background="@color/brightOrange"
        android:tag="3"
        android:onClick="buttonClick"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_large_material" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum2"
        android:background="@color/brightOrange"
        android:tag="1"
        android:onClick="buttonClick"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="="
        android:id="@+id/strToGetTo"
        android:layout_below="@+id/rNum3"
        android:textColor="@color/brightOrange"
        android:background="#ffffffff"
        android:gravity="center|center_horizontal"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/rNum4"
        android:layout_alignEnd="@+id/rNum4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/rNum1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/textScore"
            android:textAlignment="gravity"
            android:textColor="@color/brightOrange"
            android:gravity="center|center_horizontal"
            android:layout_above="@+id/rNum1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffffff"
            android:layout_weight="1.05"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="START"
            android:id="@+id/startButton"
            android:layout_alignBottom="@+id/textScore"
            android:layout_alignRight="@+id/rNum4"
            android:layout_alignEnd="@+id/rNum4"
            android:onClick="startTime"
            android:layout_weight="0.77"
            android:background="@color/brightOrange"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:textSize="@dimen/abc_text_size_large_material" />

    </LinearLayout>

</RelativeLayout>
