<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/backColor">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal1"
            android:background="@color/midColor"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rOp1"
            android:background="@color/midColor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal2"
            android:background="@color/midColor"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rOp2"
            android:background="@color/midColor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal3"
            android:background="@color/midColor"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rOp3"
            android:background="@color/midColor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal4"
            android:background="@color/midColor"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textScore"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

    </GridLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum1"
        android:background="@color/foreColor"
        android:tag="0"
        android:onClick="buttonClick"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_large_material" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum3"
        android:background="@color/foreColor"
        android:tag="2"
        android:onClick="buttonClick"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_large_material" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum4"
        android:background="@color/foreColor"
        android:tag="3"
        android:onClick="buttonClick"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_large_material" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum2"
        android:background="@color/foreColor"
        android:tag="1"
        android:onClick="buttonClick"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/strToGetTo"
        android:layout_below="@+id/rNum3"
        android:textColor="@color/foreColor"
        android:background="@color/midColor"
        android:gravity="center|center_horizontal"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/rNum4"
        android:layout_alignEnd="@+id/rNum4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnRestart"
        android:background="@drawable/restart"
        android:tag="1"
        android:onClick="restart"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/start_text"
        android:id="@+id/startButton"
        android:onClick="startTime"
        android:background="@color/baby_blue"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textColor="@color/white"
        android:layout_above="@+id/rNum2"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_alignLeft="@+id/textScore"
        android:layout_alignStart="@+id/textScore"
        android:layout_below="@+id/btnRestart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score: 0"
        android:id="@+id/textScore"
        android:textAlignment="gravity"
        android:textColor="@color/foreColor"
        android:gravity="center|center_horizontal"
        android:background="@color/midColor"
        android:layout_weight="1.05"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_above="@+id/startButton" />

</RelativeLayout>
