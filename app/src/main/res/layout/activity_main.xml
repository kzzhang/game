<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff878787">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textCountDown"
        android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:textColor="@color/brightOrange"
        android:paddingBottom="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bgnum" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/rNum1"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal1"
            android:background="@drawable/bgnum"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textCountDown"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rOp1"
            android:background="@drawable/bgnum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textCountDown"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal2"
            android:background="@drawable/bgnum"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textCountDown"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rOp2"
            android:background="@drawable/bgnum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textCountDown"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal3"
            android:background="@drawable/bgnum"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textCountDown"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="4" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rOp3"
            android:background="@drawable/bgnum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textCountDown"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="5" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nVal4"
            android:background="@drawable/bgnum"
            android:onClick="returnVal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textCountDown"
            android:layout_alignRight="@+id/rNum3"
            android:layout_alignEnd="@+id/rNum3"
            android:layout_row="0"
            android:layout_column="6" />

    </GridLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum1"
        android:background="@drawable/bgnum"
        android:tag="0"
        android:onClick="buttonClick"
        android:layout_below="@+id/textCountDown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/rNum2"
        android:layout_alignRight="@+id/rNum3"
        android:layout_alignEnd="@+id/rNum3" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum3"
        android:background="@drawable/bgnum"
        android:tag="2"
        android:onClick="buttonClick"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum4"
        android:background="@drawable/bgnum"
        android:tag="3"
        android:onClick="buttonClick"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rNum2"
        android:background="@drawable/bgnum"
        android:tag="1"
        android:onClick="buttonClick"
        android:layout_below="@+id/textCountDown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="="
        android:id="@+id/strToGetTo"
        android:layout_below="@+id/rNum3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/baby_blue"
        android:background="@drawable/bgnum"
        android:gravity="center_horizontal" />

</RelativeLayout>
